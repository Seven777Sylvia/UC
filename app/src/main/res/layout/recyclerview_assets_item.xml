<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rl_assets_rv_item_height"
    android:gravity="center_vertical" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="24dp"
    android:background="@drawable/shape_card_white">
        <TextView
            android:id="@+id/tv_assets_rv_item_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/d_34dp"
            android:singleLine="true"
            android:text="@string/wallet_name"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/assets_card_title" />
            <!--android:ems="12"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"

        android:layout_toRightOf="@+id/tv_assets_rv_item_wallet_name"
        android:background="@drawable/shape_card_white">
        <TextView
            android:id="@+id/tv_assets_rv_item_wallet_backup_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/please_backup"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/assets_backup_tip" />
    </RelativeLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:background="@null"
        android:src="@drawable/icon_arrows" />
</RelativeLayout>
    <ImageView
        android:id="@+id/iv_assets_rv_item_wallet_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_assets_item_1"
        android:scaleType="fitCenter" />


</RelativeLayout>